<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editAparelho.EditAparelhoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/nomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:editable="true"
            android:ems="10"
            android:hint="Equipamento"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/modeloText"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:ems="10"
            android:hint="Modelo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/serialText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Serial"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dataEntradaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:enabled="false"
            android:ems="10"
            android:hint="dataEntrada"
            />

        <CheckBox
            android:id="@+id/checkBoxDevolucao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Devolucao" />

        <CheckBox
            android:id="@+id/checkBoxEntregue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entregue" />

        <EditText
            android:id="@+id/dataSaidaText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="dataSaida"
            android:inputType="none"
            android:enabled="false"
             />

        <EditText
            android:id="@+id/valorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Valor"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>